{
  "name": "nextra",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "build:rollup": "rollup -c && tsc",
    "start:build": "node ./dist/bundle.js",
    "dev:start": "node --no-warnings --loader ts-node/esm ./src/index.ts",
    "dev:build-start": "npm run build && node ./dist/index.js",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest --watch",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky install",
    "todo": "leasot 'src/**/*.ts' --exit-nicely",
    "build:standalone": "BUILD_STANDALONE=true next build",
    "start:standalone": "node ./.next/standalone/server.js",
    "build-start": "next build && next start",
    "build-start:standalone": "bun run build:standalone && bun run start:standalone",
    "test:ci": "jest --ci",
    "e2e": "cypress run",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/figlet": "^1.5.6",
    "@types/node": "^20.5.9",
    "@types/prompts": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "esbuild": "^0.19.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-define-config": "^1.23.0",
    "husky": "^8.0.0",
    "leasot": "^13.3.0",
    "lint-staged": "^14.0.1",
    "markdown-table": "^3.0.3",
    "pinst": "^3.0.0",
    "prettier": "^3.0.3",
    "rollup": "^3.29.2",
    "rollup-plugin-dts": "^6.0.2",
    "rollup-plugin-esbuild": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "execa": "^8.0.1",
    "figlet": "^1.6.0",
    "ora": "^7.0.1",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write .",
      "eslint .",
      "eslint --fix ."
    ],
    "**/*.{md, yml, yaml, json}": [
      "prettier --write ."
    ]
  }
}
